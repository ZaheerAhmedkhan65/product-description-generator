{
  "manifest_version": 3,
  "name": "Product Description Generator",
  "description": "Generate SEO-friendly product descriptions using Product Description Generator.",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "settings.html",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://onlinesalepoint.com/shop/products/*/edit",
    "https://generativelanguage.googleapis.com/*"
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon_48.png"
      ],
      "matches": [
        "https://onlinesalepoint.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://onlinesalepoint.com/shop/products/*/edit"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_end"
    }
  ]
}