{
  "manifest_version": 3,
  "name": "AI Product Description Generator",
  "description": "Generate SEO-friendly product descriptions using AI.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://onlinesalepoint.com/shop/products/*/edit",
    "https://generativelanguage.googleapis.com/*"
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
  ,
  "content_scripts": [
    {
      "matches": [
        "https://onlinesalepoint.com/shop/products/*/edit"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }]
}
